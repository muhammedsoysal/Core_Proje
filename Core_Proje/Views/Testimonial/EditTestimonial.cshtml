@model EntityLayer.Concrete.Testimonial
@{
    ViewData["Title"] = "EditTestimonial";
    Layout = "~/Views/Shared/_NewAdminLayout.cshtml";
}
<div class="card-header border-0">
    <h3 class="mb-0">Referans Düzenleme Sayfası</h3>
</div>
@using (Html.BeginForm("EditTestimonial", "Testimonial", FormMethod.Post))
{
    <div class="col-12 grid-margin stretch-card">
        <div class="card">
            <div class="card-body">
                <p class="card-description"> Referans Düzenleme Paneli</p>
                <form class="forms-sample" method="post">
                    <div class="form-group">
                        @Html.HiddenFor(x => x.TestimonialID)
                        <label for="exampleInputName1">Ad Soyad</label>
                        @Html.TextBoxFor(x => x.ClientName, new { @class = "form-control" })
                    </div>
                    <div class="form-group">
                        <label for="exampleInputName1">Şirket</label>
                        @Html.TextBoxFor(x => x.Company, new { @class = "form-control" })
                    </div>
                    <div class="form-group">
                        <label for="exampleInputName1">Unvan</label>
                        @Html.TextBoxFor(x => x.Title, new { @class = "form-control" })
                    </div>
                    <div class="form-group">
                        <label for="exampleInputName1">İmg Url</label>
                        @Html.TextBoxFor(x => x.ImageUrl, new { @class = "form-control" })
                    </div>
                    <div class="form-group">
                        <label for="exampleInputName1">Yorum</label>
                        @Html.TextAreaFor(x => x.Comment,8,3, new { @class = "form-control" })
                    </div>
                    <button type="submit" class="btn btn-primary mr-2">Güncelle</button>
                    <button class="btn btn-dark">İptal</button>
                </form>
            </div>
        </div>
    </div>
}


