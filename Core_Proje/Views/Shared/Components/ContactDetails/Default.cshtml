@using EntityLayer.Concrete
@model List<Contact>
<div class="col-md-6" data-aos="fade-left" data-aos-delay="300">
    <div class="mt-3 px-1">
        <div class="h5"></div>
        <p></p>
        <p>Aşağıdaki adresler üzeridnen bana mail gönderebilir veya sorularınızı iletebilirsiniz.</p>
        <p>Görüşmek Üzere!</p>
    </div>
    <div class="mt-53 px-1">
        <div class="row">
            @foreach (var item in Model)
            {
                <div class="col-sm-2">
                    <div class="pb-1">Mail:</div>
                </div>
                <div class="col-sm-10">
                    <div class="pb-1 fw-bolder">@item.Mail</div>
                </div>
                <div class="col-sm-2">
                    <div class="pb-1">Github:</div>
                </div>
                <div class="col-sm-10">
                    <div class="pb-1 fw-bolder" onclick="location.href ='https://github.com/muhammedsoysal';" style="cursor:pointer;" taget>MuhammedSoysal</div>
                </div>
                @*<div class="col-sm-2">
                    <div class="pb-1">LinkedIn:</div>
                </div>
                <div class="col-sm-10">
                    <div class="pb-1 fw-bolder">Muhammed Soysal</div>
                </div>*@
                <div class="col-sm-2">
                    <div class="pb-1">Telefon:</div>
                </div>
                <div class="col-sm-10">
                    <div class="pb-1 fw-bolder">@item.Phone</div>
                </div>
            }
        </div>
    </div>
</div>